.player-title
  .player-header(
    ng-repeat='player in game.players', 
    style='width:{{100/game.players.length}}%;'
  )
    .player-name
        span(style='color:#FFF')
            | {{ ($index == meta.leader ? '(L) ' : '') + player.name.toUpperCase() }} 
        span(style='color:#AAA')
            | | 
        span(style='color:#FFF')
            | {{ influence(player) }} 
        br
        span(style='color:#AAA')
            | {{ player.hand.length }} CARDS
    .player-action-container
        .player-action(style='color:#{{(player.actions[0] != undefined && actionColors[player.actions[0].kind] == "FFF") ? "000" : "FFF"}};background-color:#{{player.actions[0] != undefined ? actionColors[player.actions[0].kind] : "000"}}')
            | {{ player.actions[0].description }}
    .player-vault
        span(style='color:#FFF')
            | {{ player.vault.length }} 
        span(style='color:#AAA')
            | / {{ vaultLimit(player) }}
.player-title
  .player-header(
    ng-repeat='player in game.players', 
    style='width:{{100/game.players.length}}%;'
  )
    .player-actions
      .player-action(style='border-radius: 5px;padding:5px;color:#{{player.actions[0] != undefined }};background-color:white;background-color:#{{player.actions[0] != undefined ? actionColors[player.actions[0].kind] : "FFF"}}')
        | {{ player.actions[0].description }}
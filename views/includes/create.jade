.row(
  ng-if='!game.created'
)
  .Absolute-Center.is-Responsive
    .col-sm-12.col-md-10.col-md-offset-1
      .form-group.game-button
        button.btn.btn-def.btn-block#new-game(type='button') New Game
      .form-group.game-button
        button.btn.btn-def.btn-block#join-game(type='button') Join Game
      form#new-game-form(action='', hidden)
        .form-group
          input.form-control#create-name(
            type='text', 
            name='name', 
            placeholder='Enter your name',
            ng-model='game.name'
          )
        .form-group
          button.btn.btn-def.btn-block#create(
            type='button',
            ng-click='createGame(game, game.players[meta.you])'
          ) 
            | Create
        .form-group
          button.btn.btn-def.btn-block.back(type='button') Back
      form#join-game-form(action='', hidden)
        .form-group
          input.form-control#access-code(
            type='text', 
            name='name',
            placeholder='Enter access code',
            ng-model='game.room'
          )
        .form-group
          input.form-control#join-name(
            type='text',
            name='name', 
            placeholder='Enter your name',
            ng-model='game.name'
          )
        .form-group
          button.btn.btn-def.btn-block#join(
            type='button'
            ng-click='joinGame(game)'
          ) Join
        .form-group
          button.btn.btn-def.btn-block.back(type='button') Back
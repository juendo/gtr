#bottom-bar
  #hand(
    ng-hover-hand=''
  )
    img.hand(
      ng-hover-card
      ng-drag=
        'true', 
      ng-drag-data=
        '{index: $index, card: {name: c.name, color: c.color, done: false, materials: []}}', 
      ng-click=
        'meta.currentPlayer == meta.you ? handClicked(game.players[meta.you], game, meta, {index: $index, card: {name: c.name, color: c.color, done: false, materials: []}}) : null', 
      ng-repeat=
        'c in game.players[meta.you].hand track by $index', 
      style=
        'left: {{ $index * spacing }}px;', 
      src=
        'images/cards/{{ c.name }}.png', 
      alt=
        '{{ c.name }}'
    )
  .deck(
    style=
      'float:right;height:100%;width:10%;background-color:black;', 
    ng-click=
      'meta.currentPlayer == meta.you ? deckClicked(game.players[meta.you], game, meta) : null'
  )
  .pool(
    style=
      'float:right;height:100%;width:15%;'
  )
    button.pool-counter(
      ng-repeat=
        'color in poolColors', 
      ng-click=
        'meta.currentPlayer == meta.you ? poolClicked(game.players[meta.you], color, game, meta) : null',
      style=
        'color:#{{ game.pool[color] > 0 ? colors[color] : "eedfe5"}}'
    )
      | {{ game.pool[color] > 0 ? game.pool[color] : "" }}
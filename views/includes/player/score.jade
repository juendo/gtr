.score-box(
  ng-if='meta.finished'
)
  .score
    | {{ player.winner ? "GLORY TO " + player.name.toUpperCase() : score(player) + " POINTS"}}
  .vault(
    ng-class='{ "is-current" : player == game.players[meta.currentPlayer] }'
  )
    .stockpile-padding
    .stockpile-center
      .stockpile-material(
        ng-repeat='material in player.vault track by $index', 
        ng-style='{ "background-color" : "#" + colors[material] }'
      )